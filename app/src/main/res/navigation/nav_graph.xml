<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.myapplication.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_FinalFragment"
            app:destination="@id/FinalFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.myapplication.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
        <argument
            android:name="myArg"
            app:argType="android.graphics.Bitmap"
            android:defaultValue="@null"

            />


        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.myapplication.ThirdFragment"
        android:label="ThirdFragment"
        tools:layout="@layout/fragment_third"
        android:background="#FFFFFF">
        <argument
            android:name="myArg"
            app:argType="string"
            android:defaultValue="@null"

            />
        <argument
            android:name="myArg2"
            app:argType="string"
            android:defaultValue="@null"

            />
        <action
            android:id="@+id/action_ThirdFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_ThirdFragment_to_FinalFragment"
            app:destination="@id/FinalFragment" />
    </fragment>
    <fragment
        android:id="@+id/FinalFragment"
        android:name="com.example.myapplication.FinalFragment"
        android:label="FinalFragment"
        tools:layout="@layout/fragment_final"
        >
        <argument
            android:name="myArg"
            app:argType="string"
            android:defaultValue="@null"

            />
        <action
            android:id="@+id/action_FinalFragment_to_FirstFragment"
            app:destination="@id/FirstFragment"
            />
    </fragment>
</navigation>